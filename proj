    <script>
        // Имитация базы данных в localStorage
        const DB_KEY = 'azure_website_visitors';
        
        // Инициализация базы данных
        function initDB() {
            if (!localStorage.getItem(DB_KEY)) {
                const initialData = [
                    {
                        id: 1,
                        name: "Иван Петров",
                        email: "ivan@example.com",
                        message: "Интересный проект!",
                        date: "2024-01-15 10:30:00"
                    },
                    {
                        id: 2,
                        name: "Мария Сидорова",
                        email: "maria@example.com",
                        message: "Хочу мигрировать в Azure",
                        date: "2024-01-16 14:45:00"
                    },
                    {
                        id: 3,
                        name: "Алексей Иванов",
                        email: "alex@example.com",
                        message: "Нужна консультация по безопасности",
                        date: "2024-01-17 09:15:00"
                    }
                ];
                localStorage.setItem(DB_KEY, JSON.stringify(initialData));
            }
        }
        
        // Получение всех посетителей
        function getVisitors() {
            const data = localStorage.getItem(DB_KEY);
            return data ? JSON.parse(data) : [];
        }
        
        // Добавление нового посетителя
        function addVisitor(name, email, message) {
            const visitors = getVisitors();
            const newVisitor = {
                id: visitors.length > 0 ? Math.max(...visitors.map(v => v.id)) + 1 : 1,
                name: name,
                email: email,
                message: message,
                date: new Date().toLocaleString('ru-RU')
            };
            visitors.push(newVisitor);
            localStorage.setItem(DB_KEY, JSON.stringify(visitors));
            return newVisitor;
        }
        
        // Очистка истории посетителей
        function clearVisitors() {
            if (confirm('Вы уверены, что хотите очистить историю посетителей?')) {
                localStorage.setItem(DB_KEY, JSON.stringify([]));
                loadVisitors();
                alert('История очищена!');
            }
        }
        
        // Загрузка посетителей в таблицу
        function loadVisitors() {
            const visitors = getVisitors();
            const tbody = document.getElementById('visitors-body');
            tbody.innerHTML = '';
            
            if (visitors.length === 0) {
                tbody.innerHTML = '<tr><td colspan="5" style="text-align: center;">Нет данных о посетителях</td></tr>';
                return;
            }
            
            visitors.forEach(visitor => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${visitor.id}</td>
                    <td>${visitor.name}</td>
                    <td>${visitor.email}</td>
                    <td>${visitor.message.substring(0, 50)}${visitor.message.length > 50 ? '...' : ''}</td>
                    <td>${visitor.date}</td>
                `;
                tbody.appendChild(row);
            });
        }
        
        // Показать секцию
        function showSection(sectionId) {
            // Скрыть все секции
            document.querySelectorAll('.section, #main-hero').forEach(section => {
                section.style.display = 'none';
            });
            
            // Показать выбранную секцию
            const section = document.getElementById(sectionId);
            if (section) {
                section.style.display = 'block';
                window.scrollTo({ top: section.offsetTop - 80, behavior: 'smooth' });
            }
            
            // Закрыть модальные окна
            closeModal();
        }
        
        // Показать модальное окно с посетителями
        function showVisitors() {
            loadVisitors();
            document.getElementById('visitors-modal').style.display = 'block';
        }
        
        // Показать информацию об Azure
        function showAzureInfo() {
            document.getElementById('azure-modal').style.display = 'block';
        }
        
        // Закрыть модальное окно
        function closeModal() {
            document.querySelectorAll('.modal').forEach(modal => {
                modal.style.display = 'none';
            });
        }
        
        // Отправка формы
        function submitForm(event) {
            event.preventDefault();
            
            const name = document.getElementById('name').value.trim();
            const email = document.getElementById('email').value.trim();
            const message = document.getElementById('message').value.trim();
            
            // Валидация
            if (!name || !email || !message) {
                document.getElementById('alert-error').style.display = 'block';
                document.getElementById('alert-success').style.display = 'none';
                return false;
            }
            
            // Добавление в "базу данных"
            addVisitor(name, email, message);
            
            // Показать успешное сообщение
            document.getElementById('alert-success').style.display = 'block';
            document.getElementById('alert-error').style.display = 'none';
            
            // Очистить форму
            document.getElementById('contact-form').reset();
            
            // Автоматически скрыть сообщение через 5 секунд
            setTimeout(() => {
                document.getElementById('alert-success').style.display = 'none';
            }, 5000);
            
            return false;
        }
        
        // Закрытие модальных окон при клике вне их
        window.onclick = function(event) {
            document.querySelectorAll('.modal').forEach(modal => {
                if (event.target === modal) {
                    modal.style.display = 'none';
                }
            });
        };
        
        // Инициализация при загрузке страницы
        document.addEventListener('DOMContentLoaded', function() {
            initDB();
            
            // Показать главную секцию
            showSection('main-hero');
            
            // Добавить обработчики для ссылок навигации
            document.querySelectorAll('nav a').forEach(link => {
                link.addEventListener('click', function(e) {
                    if (!this.getAttribute('onclick')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
</body>
</html>
